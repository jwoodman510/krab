@{
    ViewBag.Title = "Reset password confirmation";
}

<br />

<head>
    <meta charset="utf-8" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link href="~/Content/bootstrap-custom.css" rel="stylesheet" />
    <link href="~/Content/Login-template.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://use.fontawesome.com/a6b6e41872.js"></script>
    @Scripts.Render("~/bundles/jquery")
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="pen-title"></div>
            <div class="container">
                <div class="card"></div>
                <div class="card">
                    <section id="pwConfirmation">
                        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12 text-center">
                            <h1>
                                Your password has been reset. 
                            </h1>
                        </div>

                        <div class="form-group" style="padding-top: 10px">
                            <div class="button-container">
                                <a href="/Account/Login">Please click here to log in!</a>
                            </div>
                        </div>

                    </section>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script src="~/Scripts/app/Login-template.js"></script>

</body>